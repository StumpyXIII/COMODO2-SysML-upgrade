<?xml version="1.0" encoding="UTF-8"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:customActionDomain="http://my.custom-actions.domain/CUSTOM" version="1.0" initial="">
  <state id="STATE">
    <initial>
      <transition target="STANDBY"/>
    </initial>
  
    <state id="OPERATIONAL">
      <initial>
        <transition target=""/>
      </initial>
    
      <state id="ON">
        <onentry>
          <customActionDomain:ON_CMD name="ON_CMD"/>
        </onentry>	
        <transition event="OFF_CMD" target="OFF"/>
      </state>
    
      <state id="OFF">
      </state>
      <transition event="DIS_CMD" target="STANDBY"/>
    </state>
  
    <state id="STANDBY">
      <transition event="ENA_CMD" target="OPERATIONAL"/>
    </state>
    <onentry>
      <customActionDomain: name=""/>
    </onentry>	
  </state>
</scxml>
