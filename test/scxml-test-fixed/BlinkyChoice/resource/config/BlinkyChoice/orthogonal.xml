<?xml version="1.0" encoding="UTF-8"?>
<scxml xmlns="http://www.w3.org/2005/07/scxml" xmlns:customActionDomain="http://my.custom-actions.domain/CUSTOM" version="1.0" initial="init">
  <state id="init">
    <transition event="WIF_HEY" target="orthogonalState"/>
  </state>
  <parallel id="orthogonalState">
    <state id="">
      <initial>
        <transition target="state1"/>
      </initial>
  
      <state id="state1">
  	  <transition event="TURN_OFF"/>
  	  <transition event="TURN_ON"/>
  	</state>
  
      <final id="finalState"/>
  
    </state>
    <state id="">
      <initial>
        <transition target="state2"/>
      </initial>
  
      <state id="state2">
  	  <transition event="after_8s"/>
  	  <transition event="TURN_ON">
  	    <customActionDomain:do_this(EHH) name="do_this(EHH)"/>
  	  </transition>
  	</state>
  
      <final id="finalState"/>
  
    </state>
    <transition event="TURN_OFF" target="init"/>
  </parallel>
</scxml>
